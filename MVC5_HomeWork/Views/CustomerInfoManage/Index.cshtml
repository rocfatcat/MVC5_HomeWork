@model IEnumerable<MVC5_HomeWork.Models.客戶資料>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section breadcrumb
{
    @Html.Partial("breadcrumb")
}
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("Index", "CustomerInfoManage", FormMethod.Get))
{
    @Html.Editor("客戶類型Type", "CustomerCategory");

    @Html.TextBox("SearchKeyword", null,new { type = "search", pleaseholder = "please input keyword", @class = "form-control" })

    <button type="submit">Search</button>
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("▲","Index",new { SortColumn = "客戶名稱", Desc = false })
            @Html.DisplayNameFor(model => model.客戶名稱)
            @Html.ActionLink("▼", "Index", new { SortColumn = "客戶名稱", Desc = true })
        </th>
        <th>
            @Html.ActionLink("▲", "Index", new { SortColumn = "統一編號", Desc = false })
            @Html.DisplayNameFor(model => model.統一編號)
            @Html.ActionLink("▼", "Index", new { SortColumn = "統一編號", Desc = true })
        </th>
        <th>
            @Html.ActionLink("▲", "Index", new { SortColumn = "電話", Desc = false })
            @Html.DisplayNameFor(model => model.電話)
            @Html.ActionLink("▼", "Index", new { SortColumn = "電話", Desc = true })
        </th>
        <th>
            @Html.ActionLink("▲", "Index", new { SortColumn = "傳真", Desc = false })
            @Html.DisplayNameFor(model => model.傳真)
            @Html.ActionLink("▼", "Index", new { SortColumn = "傳真", Desc = true })
        </th>
        <th>
            @Html.ActionLink("▲", "Index", new { SortColumn = "地址", Desc = false })
            @Html.DisplayNameFor(model => model.地址)
            @Html.ActionLink("▼", "Index", new { SortColumn = "地址", Desc = true })
        </th>
        <th>
            @Html.ActionLink("▲", "Index", new { SortColumn = "Email", Desc = false })
            @Html.DisplayNameFor(model => model.客戶名稱)
            @Html.ActionLink("▼", "Index", new { SortColumn = "Email", Desc = true })
        </th>
        <th>
            @Html.ActionLink("▲", "Index", new { SortColumn = "客戶分類", Desc = false })
            @Html.DisplayNameFor(model => model.客戶名稱)
            @Html.ActionLink("▼", "Index", new { SortColumn = "客戶分類", Desc = true })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.客戶名稱)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.統一編號)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.電話)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.傳真)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.地址)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.客戶分類)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
